                    android:background="@drawable/nn8"
                    android:onClick="talkAndWrite8"/>

                <Button
                    android:id="@+id/b9"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/nn9"
                    android:onClick="talkAndWrite9"/>

                <Button
                    android:id="@+id/b0"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/nn0"
                    android:onClick="talkAndWrite0"/>
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bottonEsp"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Espacio"
                android:onClick="talkAndWriteEsp"/>

            <Button
                android:id="@+id/botton"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Limpiar"
                android:onClick="limpiar"/>

            <Button
                android:id="@+id/bottonTra"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/borrar"
                android:gravity="center"
                android:onClick="borrar" />

        </LinearLayout>

        <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="traducir"
            android:text="Traducir" />
    </LinearLayout>
</ScrollView>

</LinearLayout>
