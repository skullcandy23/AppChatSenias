                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/w1"
                    android:onClick="talkAndWriteW"/>

                <Button
                    android:id="@+id/bx"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/x1"
                    android:onClick="talkAndWriteX"/>
            </TableRow>

            <TableRow
                android:id="@+id/gr5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/by"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/y1"
                    android:onClick="talkAndWriteY"/>

                <Button
                    android:id="@+id/bz"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/z1"
                    android:onClick="talkAndWriteZ"/>

                <Button
                    android:id="@+id/b1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/nn1"
                    android:onClick="talkAndWrite1"/>

                <Button
                    android:id="@+id/b2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/nn2"
                    android:onClick="talkAndWrite2"/>

                <Button
                    android:id="@+id/b3"
