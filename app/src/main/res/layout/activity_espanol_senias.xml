                <Button
                    android:id="@+id/bp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/p1"
                    android:onClick="talkAndWriteP"/>

                <Button
                    android:id="@+id/bq"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/q1"
                    android:onClick="talkAndWriteQ"/>

                <Button
                    android:id="@+id/br"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/r1"
                    android:onClick="talkAndWriteR"/>
            </TableRow>

            <TableRow
                android:id="@+id/gr4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/bs"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/s1"
                    android:onClick="talkAndWriteS"/>

                <Button
                    android:id="@+id/bt"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/t1"
