            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:textColor="@android:color/holo_purple"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/gr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/ba"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/a1"
                    android:onClick="talkAndWriteA" />

                <Button
                    android:id="@+id/bb"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/b1"
                    android:onClick="talkAndWriteB"/>

                <Button
                    android:id="@+id/bc"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/c1"
                    android:onClick="talkAndWriteC"/>

                <Button
                    android:id="@+id/bd"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/d1"
                    android:onClick="talkAndWriteD"/>

                <Button
                    android:id="@+id/be"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/e1"
                    android:onClick="talkAndWriteE"/>

                <Button
                    android:id="@+id/bf"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/f1"
                    android:onClick="talkAndWriteF"/>
            </TableRow>

            <TableRow
                android:id="@+id/gr2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/bg"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/g1"
                    android:onClick="talkAndWriteG"/>

                <Button
                    android:id="@+id/bh"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/h1"
                    android:onClick="talkAndWriteH"/>

                <Button
                    android:id="@+id/bi"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/i1"
                    android:onClick="talkAndWriteI"/>

                <Button
                    android:id="@+id/bj"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/j1"
                    android:onClick="talkAndWriteJ"/>

                <Button
                    android:id="@+id/bk"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/k1"
                    android:onClick="talkAndWriteK"/>

                <Button
                    android:id="@+id/bl"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/l1"
                    android:onClick="talkAndWriteL"/>
            </TableRow>

            <TableRow
                android:id="@+id/gr3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/bm"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/m1"
                    android:onClick="talkAndWriteM"/>

                <Button
                    android:id="@+id/bn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/n1"
                    android:onClick="talkAndWriteN"/>

                <Button
                    android:id="@+id/bo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
